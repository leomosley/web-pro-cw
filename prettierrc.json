{
  "semi": true,
  "singleQuote": true,
  "quoteProps": "consistent",
  "trailingComma": "all",
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "useTabs": false,
  "tabWidth": 2,
  "printWidth": 100,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "quoteProps": "preserve"
      }
    }
  ]
}